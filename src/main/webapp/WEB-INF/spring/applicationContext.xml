<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<mvc:resources location="/static/**" mapping="/WEB-INF/static" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">

		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />

	</bean>


	<bean id="CommunityDao" class="com.meltube.community.dao.CommunityDaoImpl"></bean>

	<bean id="CommunityService" class="com.meltube.community.service.CommunityServiceImpl">
		<property name="communityDao" ref="CommunityDao"></property>
	</bean>
	
	<bean id="CommunityController" class="com.meltube.community.web.CommunityController">
		<property name="communityService" ref="CommunityService"></property>
	</bean>

	<bean id="MemberController" class="com.meltube.member.web.MemberController">
	
	</bean>

</beans>
