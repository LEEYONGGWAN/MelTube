<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 주식 정보 얻어오기 -->
	<bean id="stockJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="kr.co.hucloud.batch.job.stock.StockJob" ></property>
	</bean>

	<bean id="stockJobTrigger"
			class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
			
			<property name="jobDetail" ref="stockJob"/>
			<property name="cronExpression" value="1 0/1 * * * ?"/>
	</bean>




	<bean 	id="printNowDate" 
			class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
				  value="kr.co.hucloud.batch.job.print.now.date.PrintNowDateJob" />
	</bean>
	
	<bean 	id="cronTrigger1" 
			class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="printNowDate"/>
		<property name="cronExpression" value="0/5 * * * * ?"/>
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTrigger1" />
				<ref bean="stockJobTrigger"/>
			</list>
		</property>
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">3</prop>
				<prop key="org.quartz.threadPool.threadPriority">4</prop>
				<prop key="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</prop>
				<prop key="org.quartz.jobStore.misfireThreshold">60000</prop>
			</props>
		</property>
	</bean>
	
</beans>
